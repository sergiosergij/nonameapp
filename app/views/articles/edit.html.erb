<h1>Edit Article</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<h1><span class ='btn btn-outline-primary'><%= link_to "Back", :back %></span></h1>
<h1><span class ='btn btn-outline-primary'><%= link_to "All Articles", articles_path %></span></h1>